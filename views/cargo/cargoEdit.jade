extends ../layout

block content
    .col-md-6
        h2 Alterar Cargo
        form(role="form", id="caForm")
            .form-group
                -var cargo = locals.cargo
                label(for="nome") Nome:
                input(type="hidden" id="id" value="#{cargo._id}")
                input(type="text", class="form-control", id="nome", placeholder="Nome", maxlength="200" value="#{cargo.nome}")
            button(type="button" class="btn btn-primary" id="btnSubmit") Alterar
            a(class="btn btn-default" href="/") Cancelar
        script(src="../../js/cargoEdit.js")