extends ../layout

block content
    .col-md-6
        h2 Alterar Categoria
        form(role="form", id="caForm")
            .form-group
                -var categoria = locals.categoria
                label(for="nome") Nome:
                input(type="hidden" id="id" value="#{categoria._id}")
                input(type="text", class="form-control", id="nome", placeholder="Nome", maxlength="200" value="#{categoria.nome}")
            button(type="button" class="btn btn-primary" id="btnSubmit") Alterar
            a(class="btn btn-default" href="/") Cancelar
        script(src="../../js/categoriaEdit.js")